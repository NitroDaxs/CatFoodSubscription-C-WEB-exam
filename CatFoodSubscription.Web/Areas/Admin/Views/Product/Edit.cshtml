@model CatFoodSubscription.Web.ViewModels.Admin.AdminProductEditViewModel
@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Admin/edit.css" />
</head>
<body>
    <form asp-controller="Product" asp-action="Save" asp-area="Admin" method="post">
        <div class="edit-container">
            <div class="form-group">
                <h1>Edit Product: @Model.Name</h1>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Id" class="control-label"></label>
                <input asp-for="@Model.Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label" aria-required="true"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price" class="control-label" aria-required="true"></label>
                <input asp-for="@Model.Price" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label" aria-required="true"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn-save btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</body>
</html>
