@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CatFoodSubscription.Web.ViewModels.Admin.Product.AdminRestoreViewModel

@{
    ViewBag.Title = "Restore";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Admin/delete.css" />
</head>
<body>
    <h2 class="text-center">@ViewBag.Title</h2>
<div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Product Name: @Model.Name</h3>
                    <p class="text-danger mt-3"><b>"Are you sure you want to restore this product?"</b></p>
                </div>
                <div class="card-footer" style="display: flex; justify-content: center; align-content: center;">
                    <div style="margin-right: 10px;">
                        <form asp-action="ConfirmRestore" method="post">
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="hidden" asp-for="@Model.Name" />
                            <button type="submit" class="btn btn-success">Restore</button>
                        </form>
                    </div>
                    <div>
                        <form asp-action="Cancel" method="get">
                            <button class="btn btn-primary">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>