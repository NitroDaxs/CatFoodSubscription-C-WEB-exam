@model CatFoodSubscription.Web.ViewModels.Product.ProductDetailViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Product/styles.css" />
    <title>Product Details</title>
</head>
<body>

    <h1>Product Details</h1>

    <div>
        <img src="@Model.ImageUrl" alt="Product Image" class="product-image">
        <h2>@Model.Name</h2>
        <p>Description: @Model.Description</p>
        <p>Price: $@Model.Price</p>
        <p>Category: @Model.Category</p>

        <!-- Add to Cart Buttons -->
        <form asp-controller="Order" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <button type="submit" name="purchaseType" value="false">Add to Cart (One-Time Purchase)</button>
        </form>

        <form asp-controller="Order" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <button type="submit" name="purchaseType" value="true">Add to Cart (Subscription)</button>
        </form>
        <!-- End of Add to Cart Buttons -->
        @* Include other property access as needed *@
    </div>

</body>
</html>