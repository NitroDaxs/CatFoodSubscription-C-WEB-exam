@model IEnumerable<CatFoodSubscription.Web.ViewModels.Order.OrderSummaryViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Order/checkout.css" />
    <title>Document</title>
</head>
<body class="checkout-page">
    <div class="row">
        <div class="col-75">
            <div class="container-checkout">
                <form action="/action_page.php">

                    <div class="row">
                        <div class="col-50">
                            <h3>Shipping Address</h3>
                            <label for="fname"><i class="fa fa-user"></i> First Name</label>
                            <input type="text" id="fname" name="firstname" placeholder="Kon">
                            <label for="fname"><i class="fa fa-user"></i> Last Name</label>
                            <input type="text" id="fname" name="firstname" placeholder="Konev">
                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input type="text" id="email" name="email" placeholder="kon@example.com">
                            <label for="adr"><i class="fa fa-address-card-o"></i> Street</label>
                            <input type="text" id="adr" name="address" placeholder="3 Gancho Karamazdhrakov str., BB 110">
                            <label for="city"><i class="fa fa-institution"></i> City</label>
                            <input type="text" id="city" name="city" placeholder="Ruse">

                            <div class="row">
                                <div class="col-50">
                                    <label for="state">Country</label>
                                    <input type="text" id="state" name="state" placeholder="Bulgaria">
                                </div>
                                <div class="col-50">
                                    <label for="zip">Zip</label>
                                    <input type="text" id="zip" name="zip" placeholder="7019">
                                </div>
                            </div>
                        </div>

                        <div class="col-50">
                            <h3>Payment</h3>
                            <p>Unfortunately for the moment we accept ont cash at delivery!</p>
                        </div>

                    </div>
                    <label>
                        <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                    </label>
                    <input type="submit" value="Continue to checkout" class="btn-checkout">
                </form>
            </div>
        </div>

        <div class="col-25">
            <div class="container-checkout">
                <h4>
                    Cart
                    <span class="price" style="color:black">
                        <i class="fa fa-shopping-cart"></i>
                        <b>4</b>
                    </span>
                </h4>
                <div class="subscription-box">
                    @{
                        var subscriptionBox = Model.FirstOrDefault()?.SubscriptionBox;
                    }

                    @if (subscriptionBox.Id != 0)
                    {
                        <h5>Subscription Box</h5>
                        <div class="row justify-content-between">
                            <div class="col-auto">
                                <img class="img-fluid" src="@subscriptionBox.ImageUrl" width="62" height="62">
                                <div class="media-body my-auto">
                                    <div class="row ">
                                        <div class="col-auto">
                                            <p class="mb-0"><b>@subscriptionBox.Name</b></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="pl-0  col-auto my-auto">
                                <div class="quantity-box">
                                    <p><span class="quantity"><b>1</b></span></p>
                                </div>
                            </div>
                            <div class="pl-0  col-auto my-auto">
                                <p><span class="price"><b>@(subscriptionBox.Price)</b> BGN</span></p>
                            </div>
                        </div>
                        <hr style="color: #910A67; height: 2px;">
                    }
                </div>
                <div class="subscription-products">
                    @if (Model.Any(o => o.Products.Any()))
                    {
                        <h5>Subscription Products</h5>
                        @foreach (var product in Model.SelectMany(o => o.Products))
                        {
                            <div class="row justify-content-between">
                                <div class="col-auto">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                                        <img class="img-fluid" src="@product.ImageUrl" width="62" height="62">
                                    </a>
                                    <div class="media-body my-auto">
                                        <div class="row">
                                            <div class="col-auto">
                                                <p class="mb-0"><b>@product.Name</b></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="pl-0  col-auto my-auto">
                                    <div class="quantity-box">
                                        <p><span class="quantity"><b>@product.Quantity</b></span></p>
                                    </div>
                                </div>
                                <div class="pl-0  col-auto my-auto">
                                    <p><span class="price"><b>@(product.Quantity * product.Price)</b> BGN</span></p>
                                </div>
                            </div>
                            <hr style="color: #910A67; height: 2px;">
                        }
                    }
                </div>
                @{
                    var totalPrice = Model.Sum(o => o.Products.Sum(p => p.Quantity * p.Price) + o.SubscriptionBox.Price);
                }
                <p>Total <span class="price"><b>@totalPrice</b> BGN</span></p>
            </div>
        </div>
    </div>
</body>
</html>