@model IEnumerable<CatFoodSubscription.Web.ViewModels.Order.OrderAllViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Home/orders.css" />
</head>
<body class="body">
    <div class="container">
        <h2 class="title">Your Orders</h2>
        @foreach (var order in Model)
        {
            <div class="row">
                <div class="col-12">
                    <div class="list-group mb-5">
                        <div class="list-group-item p-3 bg-snow" style="position: relative;">
                            <div class="row w-100 no-gutters">
                                <div class="col-6 col-md">
                                    <h6 class="text-charcoal mb-0 w-100">Order Number</h6>
                                    <a href="" class="text-pebble mb-0 w-100 mb-2 mb-md-0">@order.Id</a>
                                </div>
                                <div class="col-6 col-md">
                                    <h6 class="text-charcoal mb-0 w-100">Date</h6>
                                    <p class="text-pebble mb-0 w-100 mb-2 mb-md-0">@order.OrderDate</p>
                                </div>
                                <div class="col-6 col-md">
                                    <h6 class="text-charcoal mb-0 w-100">Total</h6>
                                    <p class="text-pebble mb-0 w-100 mb-2 mb-md-0">@order.TotalPrice</p>
                                </div>
                                <div class="col-6 col-md">
                                    <h6 class="text-charcoal mb-0 w-100">Shipped To</h6>
                                    <p class="text-pebble mb-0 w-100 mb-2 mb-md-0">@order.FirstName @order.LastName</p>
                                </div>
                                <div class="col-12 col-md-3">
                                    <form asp-controller="Order" asp-action="Summary" method="post">
                                        <input type="hidden" name="id" value="@order.Id" />
                                        <button type="submit" class="btn btn-primary w-100">View Order</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>